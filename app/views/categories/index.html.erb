<p id="notice"><%= notice %></p>

<h1>Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.description %></td>
        <td><%= link_to 'Show', category %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Category', new_category_path %>


<div class="main_content col-sm-12">
		<!-- BREADCRUMBS -->
		<div class="breadcrumb_wrap">
			<ul class="breadcrumb">
				<li>
					<a class="homepage-link" href="/" title="Back to the frontpage">Home</a>
				</li>
				<li><span class="page-title">Collections</span></li>
			</ul>
		</div>
		<h2 class="page_heading">Collections</h2>
		<div class="collection_listing_main">
		  
		  <% @categories.each do |category|  %>
			<div class="col-xs-6 col-sm-3 collection_listing_item item_2_1 item_4_1">
				<div class="collection_img">
				  <%= link_to image_tag(category.image), category_products_path(category)  %>
				</div>
				<div class="collection_info">
					<h4 class="collection_name"><%= link_to category.name, category_products_path(category) %></h4>
					<p class="collection_products"><%= category.products.count %> products</p>
					<p class="collection_desc"><%= truncate(category.description, length: 25)%></p>
					<a class="btn" href="/collections/bakeware">View products</a>
				</div>
			</div>
      <% end  %>
		</div>
	</div>
